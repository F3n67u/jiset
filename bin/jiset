#!/bin/bash
if [ -z "$JISET_HOME" ]; then
  echo "You need to set JISET_HOME to the directory containing JISET"
  exit 1
fi

ASSEMBLY_JAR="${JISET_HOME}/target/scala-2.13/JISET-assembly-1.0.jar"
if [ ! -f "${ASSEMBLY_JAR}" ]; then
  cd "${JISET_HOME}" && sbt assembly
fi
java -jar ${ASSEMBLY_JAR} $@
